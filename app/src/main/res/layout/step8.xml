<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F1F1F"
    android:padding="16dp">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back Arrow"
            />

        <!-- Step Indicator -->


    </RelativeLayout>

    <!-- Progress Bar -->
    <View
        android:layout_width="336.44dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#3B82F6"/>

    <!-- Question -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="WHAT IS YOUR FITNESS LEVEL?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"/>

    <!-- Diet Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Vegetarian Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:drawableEnd="@drawable/ic_vegetarian"
            android:background="#2E2D2D"
            android:orientation="horizontal"
            android:padding="12dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="BEGINNER"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="I'm new to fitness"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:contentDescription="Vegetarian Icon"
                android:src="@drawable/ic_beginner" />
        </LinearLayout>

        <!-- Vegan Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"

            android:background="#2E2D2D"
            android:orientation="horizontal"
            android:padding="12dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="INTERMEDIATE"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="I work out 2-3 times a week"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:contentDescription="Vegan Icon"
                android:src="@drawable/ic_intermediate" />
        </LinearLayout>

        <!-- Keto Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"

            android:background="#2E2D2D"
            android:orientation="horizontal"
            android:padding="12dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="ADVANCED"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="I exercise regularly"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:contentDescription="Keto Icon"
                android:src="@drawable/ic_advanced" />
        </LinearLayout>

        <!-- Other Option -->
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="194dp"
        android:text="CONTINUE"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"/>
</LinearLayout>
